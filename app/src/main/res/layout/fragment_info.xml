<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ComicInfoActivity"
  android:orientation="vertical"
  android:background="@android:color/black"
  >
  <ProgressBar
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/loadingEventsInfo"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
      android:id="@+id/bckImageEvent"
      android:layout_width="match_parent"
      android:layout_height="270dp"
      android:scaleType="centerCrop"
      android:alpha="0.5"
/>


    <ImageView
      android:id="@+id/imgEventInfo"
      android:layout_marginTop="8dp"
      android:layout_width="match_parent"
      android:layout_height="250dp"
/>
  </RelativeLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
        android:id="@+id/txtTitleEvent"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:paddingTop="10dp"/>
      <TextView
        android:id="@+id/txtDescriptionEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:paddingStart="12dp"
        android:layout_marginTop="12dp"/>
      <TextView
        android:id="@+id/txtCreatorsEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:paddingStart="12dp"
        android:layout_marginTop="12dp"/>


      <Button
        android:layout_marginTop="12dp"
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="30dp"
        android:padding="16dp"
        android:text="Pagina Oficial"
        android:backgroundTint="@android:color/holo_red_light"/>

      <Button
        android:layout_marginTop="12dp"
        android:id="@+id/addFav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="30dp"
        android:padding="16dp"
        android:text="AÃ±adir a favoritos"
        android:backgroundTint="@android:color/holo_red_light"/>


    </LinearLayout>
  </ScrollView>

</LinearLayout>
